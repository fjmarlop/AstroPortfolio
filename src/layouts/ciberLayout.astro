---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favCB.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<!-- Fondo con imagen y filtro de opacidad -->
		<div class="fondo" aria-hidden="true"></div>

		<!-- Contenido -->
		<main class="contenido">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Gugi&display=swap");
	@import url("https://fonts.googleapis.com/css2?family=Fira Code&display=swap");

	@font-face {
		font-family: "loserboi";
		src: url("/fonts/loserboi_grunge.ttf") format("truetype");
		font-weight: normal;
		font-style: normal;
	}

	html {
		font-family: "Fira Code", monospace;
		color: #0389aa;
		background: black;
		margin: 0;
		padding: 0;
	}

	body {
		margin: 0;
		padding: 0;
		position: relative;
		min-height: 100vh;
		overflow-x: hidden;
	}

	.fondo {
		position: fixed;
		inset: 0;
		background-image: url("/background.jpg");
		background-size: cover;
		background-position: center;
		opacity: 0.15; /* Ajusta la transparencia aqu√≠ */
		z-index: -1;
	}

	.contenido {
		position: relative;
		z-index: 1;
		padding: 2rem;
	}

</style>
