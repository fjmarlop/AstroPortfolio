---
interface Props {
  titulo: string;
  id: string;
  items: {
    slug: string;
    title: string;
    categoria: string;
  }[];
}

const { titulo, id, items }: Props = Astro.props;
---

<div>
  <li class="mt-2">
    <button onclick={`toggleLista('${id}')`} class="text-cyan-400 font-semibold hover:underline">
      {titulo}
    </button>
  </li>
  <ul id={id} class="mt-2 pl-4 hidden space-y-1">
    {
      items.map((post) => (
        <li>
          <a href="#" onclick={`cargarContenido('${post.categoria}', '${post.slug}')`} class="text-neutral-300 hover:text-cyan-400">
            {post.title}
          </a>
        </li>
      ))
    }
  </ul>
</div>